<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown_1"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Best Place For Your Pet"
        android:fontFamily="@font/bm"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="70dp"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:id="@+id/hospital"
        android:layout_marginLeft="20dp"
        android:background="@drawable/address_item"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:elevation="3dp"
        android:layout_weight="1"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/hospital"
            android:layout_height="70dp"/>

        <Button
            android:id="@+id/button_hospital"
            android:background="@android:color/transparent"
            android:textColor="@color/brown_green"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:fontFamily="@font/bm"
            android:text="Hospital"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Cafe"
        android:background="@drawable/address_item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="3dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@drawable/hotel"
            android:layout_height="70dp"/>

        <Button
            android:background="@android:color/transparent"
            android:textColor="@color/brown_green"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/button_hotel"
            android:fontFamily="@font/bm"
            android:text="Hotel"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Rooms"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/address_item"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:elevation="3dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:padding="15dp"
            android:src="@drawable/shop"
            android:layout_height="70dp"/>

        <Button
            android:background="@android:color/transparent"
            android:id="@+id/button_shop"
            android:textColor="@color/brown_green"
            android:layout_width="match_parent"
            android:fontFamily="@font/bm"
            android:layout_height="90dp"
            android:text="Shop"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Hotel"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:background="@drawable/address_item"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:elevation="3dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/cafe"
            android:padding="10dp"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:layout_height="70dp"/>

        <Button
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:fontFamily="@font/bm"
            android:layout_height="90dp"
            android:id="@+id/button_entertains"
            android:textColor="@color/brown_green"
            android:text="CAFE"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"/>

    </LinearLayout>



</LinearLayout>