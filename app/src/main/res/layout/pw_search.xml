<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_gradation">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="비밀번호 찾기"
        android:fontFamily="@font/bm"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@color/brown_3"
        android:gravity="center"/>

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:src="@drawable/logo2"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/bm"
        android:textStyle="bold"
        android:text="Double Date"
        android:padding="5dp"
        android:textSize="17dp"
        android:textColor="@color/brown_green"
        />

    <EditText
        android:background="@drawable/create_main"
        android:id="@+id/search_email"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_height="45dp"
        android:fontFamily="@font/bm"
        android:layout_marginTop="20dp"
        android:hint=" 이메일(아이디) 입력"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pw_search_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="아이디 입력"
            android:fontFamily="@font/bm"
            android:background="@drawable/login_main"
            android:textSize="15dp"
            android:textColor="@color/brown_3" />



        <Button
            android:id="@+id/next_login"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="힌트 보기"
           android:layout_marginLeft="20dp"
            android:fontFamily="@font/bm"
            android:background="@drawable/login_main"
            android:textSize="15dp"
            android:textColor="@color/brown_3" />

    </LinearLayout>

</LinearLayout>