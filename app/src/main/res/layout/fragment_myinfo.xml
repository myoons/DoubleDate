<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown_1"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/myinfo_profile"
            android:layout_width="120dp"
            android:layout_height="122dp"
            android:src="@drawable/myinfo_dog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="122dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myinfo_ID"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@color/brown_2"
                android:fontFamily="@font/bm"
                android:gravity="center"
                android:text="ID"
                android:textColor="@color/brown_green"
                android:textSize="20dp" />

            <View
                android:background="@color/brown_green"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/myinfo_nickname"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@color/brown_2"
                android:fontFamily="@font/bm"
                android:gravity="center"
                android:text="nickname"
                android:textColor="@color/brown_green"
                android:textSize="20dp" />

            <View
                android:background="@color/brown_green"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/myinfo_number"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@color/brown_2"
                android:fontFamily="@font/bm"
                android:gravity="center"
                android:text="number"
                android:textColor="@color/brown_green"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/myinfo_gender_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@color/brown_2"
            android:padding="11dp"
            android:src="@drawable/gender" />

        <TextView
            android:id="@+id/myinfo_gender"
            android:layout_width="80dp"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:background="@color/brown_2"
            android:fontFamily="@font/bm"
            android:gravity="center"
            android:text="gender"
            android:textColor="@color/brown_green"
            android:textSize="15dp"/>

        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/myinfo_animals_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@color/brown_2"
            android:padding="12dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/myinfo_animals"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@color/brown_2"
            android:fontFamily="@font/bm"
            android:gravity="center"
            android:text="bone"
            android:textColor="@color/brown_green"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <View
            android:background="@color/brown_green"
            android:layout_width="140dp"
            android:layout_height="1dp" />

        <View
            android:background="@color/brown_green"
            android:layout_width="140dp"
            android:layout_marginLeft="20dp"
            android:layout_height="1dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/myinfo_bone_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/brown_2"
            android:padding="12dp"
            android:src="@drawable/bone" />

        <TextView
            android:id="@+id/myinfo_bone"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@color/brown_2"
            android:fontFamily="@font/bm"
            android:gravity="center"
            android:text="score"
            android:textColor="@color/brown_green"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="140dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/myinfo">

            <ImageView
                android:id="@+id/myinfo_score_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/brown_2"
                android:padding="10dp"
                android:src="@drawable/score" />

            <TextView
                android:id="@+id/myinfo_score"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="@color/brown_2"
                android:fontFamily="@font/bm"
                android:gravity="center"
                android:text="animals"
                android:textColor="@color/brown_green"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

    <GridView
        android:id="@+id/myinfo_gridview"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:numColumns="4"
        android:layout_marginTop="20dp"
        android:background="@color/brown_2" />

</LinearLayout>