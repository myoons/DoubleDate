<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown_1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/add_image"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        android:background="@drawable/gallery_button"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

            <Button
                android:id="@+id/select_gallery"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:text="갤러리"
                android:layout_gravity="center"
                android:fontFamily="@font/bm"
                android:textColor="@color/brown_green"
                android:background="@drawable/gallery_button"/>

            <Button
                android:id="@+id/select_camera"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:text="카메라"
                android:layout_gravity="center"
                android:fontFamily="@font/bm"
                android:layout_marginLeft="20dp"
                android:textColor="@color/brown_green"
                android:background="@drawable/gallery_button"/>

    </LinearLayout>

    <EditText
        android:id="@+id/add_title"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:hint=" 사진 제목"
        android:fontFamily="@font/bm"
        android:textColor="@color/brown_green"
        android:background="@drawable/gallery_button"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/add_tag"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:hint=" 사진 태그"
        android:fontFamily="@font/bm"
        android:textColor="@color/brown_green"
        android:background="@drawable/gallery_button"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/addimage_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="사진 추가하기"
        android:layout_gravity="center"
        android:fontFamily="@font/bm"
        android:textColor="@color/brown_green"
        android:background="@drawable/gallery_button"/>


</LinearLayout>